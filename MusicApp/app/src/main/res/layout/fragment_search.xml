<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@color/com_facebook_blue" android:id="@+id/appBarLayoutSearch">
        <androidx.appcompat.widget.Toolbar android:layout_height="?attr/actionBarSize" android:layout_width="match_parent" android:id="@+id/toolBarSearchSong"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/recyclerVSearchSong" android:layout_below="@id/appBarLayoutSearch"/>
    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/tvNoDataSearchSong" android:visibility="gone" android:gravity="center" android:text="No data" android:textSize="35sp"/>
</RelativeLayout>