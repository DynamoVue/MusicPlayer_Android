<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/cardItemIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                />

           <androidx.cardview.widget.CardView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:layout_toRightOf="@+id/cardItemIndex"
               app:cardCornerRadius="5dp"
               android:id="@+id/cardItemImageContainer"
               >
               <ImageView
                   android:id="@+id/cardItemImage"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                   android:src="@drawable/iconcard"
                   android:scaleType="centerCrop"
                   />
           </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/cardItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_toRightOf="@+id/cardItemImageContainer"
                android:text="The one that got away"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="20sp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/cardItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_below="@+id/cardItemTitle"
                android:layout_toRightOf="@+id/cardItemImageContainer"
                android:text="Katy Perry, Ed Sherran"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:id="@+id/cardItemMore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_iconellipsis"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
</androidx.cardview.widget.CardView>