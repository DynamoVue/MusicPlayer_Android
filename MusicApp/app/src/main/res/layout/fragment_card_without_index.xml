<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlistSong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_centerVertical="true"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardItemImageContainer"
            >
            <ImageView
                android:id="@+id/cardItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/iconcard"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/cardItemImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cardItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="The one that got away"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cardItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_below="@+id/cardItemTitle"
                android:text="Katy Perry, Ed Sherran"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>

        <ImageView
            android:padding="10dp"
            android:id="@+id/cardItemMore"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>