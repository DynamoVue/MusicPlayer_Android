<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewSearchItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvSearchSongName"
        android:textSize="18sp"
        android:text="Song Name here"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/imageViewSearchItem"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSearchArtistName"
        android:textSize="15sp"
        android:text="Artist Name here"
        android:textColor="#6e6d6d"
        android:layout_toRightOf="@id/imageViewSearchItem"
        android:layout_below="@id/tvSearchSongName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/imageViewSearchLikes"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>